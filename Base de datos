-- Tabla: asistentes
CREATE TABLE IF NOT EXISTS asistentes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    asiento_id INTEGER,
    evento_id INTEGER,
    ticket_id INTEGER,
    FOREIGN KEY (asiento_id) REFERENCES asientos (id) ON DELETE CASCADE,
    FOREIGN KEY (evento_id) REFERENCES eventos (id) ON DELETE CASCADE,
    FOREIGN KEY (ticket_id) REFERENCES tickets (id) ON DELETE CASCADE
);

-- Tabla: eventos
CREATE TABLE IF NOT EXISTS eventos (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    fecha TEXT NOT NULL,  -- Puede ser del formato 'YYYY-MM-DD'
    hora TEXT NOT NULL,   -- Puede ser del formato 'HH:MM'
    salon_id INTEGER,
    FOREIGN KEY (salon_id) REFERENCES salones (id) ON DELETE CASCADE
);

-- Tabla: salones
CREATE TABLE IF NOT EXISTS salones (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nombre TEXT NOT NULL,
    capacidad INTEGER NOT NULL
);
INSERT INTO salones (id, nombre, capacidad) VALUES (1, 'Salï¿½n Principal', 25);
INSERT INTO salones (id, nombre, capacidad) VALUES (2, 'Teatro', 16);
INSERT INTO salones (id, nombre, capacidad) VALUES (3, 'Comedor', 16);

-- Tabla: tickets
CREATE TABLE IF NOT EXISTS tickets (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    evento_id INTEGER,
    asiento_id INTEGER,
    asistente_id INTEGER,
    FOREIGN KEY (evento_id) REFERENCES eventos (id) ON DELETE CASCADE,
    FOREIGN KEY (asiento_id) REFERENCES asientos (id) ON DELETE CASCADE,
);

COMMIT TRANSACTION;
PRAGMA foreign_keys = on;
