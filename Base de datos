-- Tabla: asientos
CREATE TABLE IF NOT EXISTS asientos (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    numero INTEGER NOT NULL,
    ocupado BOOLEAN DEFAULT 0,
    salon_id INTEGER,
    FOREIGN KEY (salon_id) REFERENCES salones (id) ON DELETE CASCADE
);
